<!-- Cockpit
Liam Gathercole, from A340-600-HGW
-->

<PropertyList>

	<path>cockpit.ac</path>


	<animation>
		<type>material</type>
		<object-name>blah</object-name>
		<object-name>blah.003</object-name>
		<object-name>blah.004</object-name>
		<object-name>blah.006</object-name> 
		<object-name>blah.012</object-name>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
		</emission>
	</animation>

	<!--pedestal-->
	<model>
		<name>pedestal</name>
		<path>Aircraft/A340-600HGW/Models/Instruments/Pedestal/pedestal.xml</path>
		<offsets>
			<x-m>14.8</x-m>
			<y-m>4.015</y-m>
			<z-m>7</z-m>
			<pitch-deg>11</pitch-deg>
		</offsets>
	</model> 

	<model>
		<name>Autopilot</name>
		<path>Aircraft/A340-600HGW/Models/Instruments/MCP/MCP.xml</path>
		<offsets>
			<x-m>15.833</x-m><!--x-m>15.839</x-m-->
			<y-m>4.018</y-m>
			<z-m>7.679</z-m>
			<pitch-deg>10</pitch-deg>
		</offsets>
	</model>

	<model>
		<name>Autopilot</name>
		<path>Aircraft/A340-600HGW/Models/Instruments/Overhead/overhead.xml</path>
		<offsets>
			<x-m>17</x-m>
			<y-m>4.16</y-m>
			<z-m>7.85</z-m>
			<roll-deg>2.55</roll-deg>
			<pitch-deg>2.5</pitch-deg>
		</offsets>
	</model>

	<model>
		<name>flightdeck</name>
		<path>Aircraft/A340-600HGW/Models/Cockpit/panel2.xml</path>
		<offsets>
			<x-m>17.283</x-m>
			<y-m>4</y-m>
			<z-m>6.52</z-m>
			<pitch-deg>19</pitch-deg>
		</offsets>
	</model>

	<!-- CAPTAIN Stick-->
	<animation>
		<type>rotate</type>
		<object-name>StickLeft</object-name>
		<property>controls/flight/elevator</property>
		<factor>15</factor>
		<center>
			<x-m>15.96</x-m>
			<y-m>3.1746</y-m>
			<z-m>7.2081</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>StickLeft</object-name>
		<property>controls/flight/aileron</property>
		<factor>15</factor>
		<center>
			<x-m>15.96</x-m>
			<y-m>3.1746</y-m>
			<z-m>7.2081</z-m>
		</center>
		<axis>
			<x>-1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<!-- FIRST OFFICER Stick -->

	<animation>
		<type>rotate</type>
		<object-name>StickRight</object-name>
		<property>controls/flight/elevator</property>
		<factor>15</factor>
		<center>
			<x-m>15.96</x-m>
			<y-m>4.8568</y-m>
			<z-m>7.2081</z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
 
	<animation>
		<type>rotate</type>
		<object-name>StickRight</object-name>
		<property>controls/flight/aileron</property>
		<factor>15</factor>
		<center>
			<x-m>15.96</x-m>
			<y-m>4.8568</y-m>
			<z-m>7.2081</z-m>
		</center>
		<axis>
			<x>-1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

</PropertyList>
